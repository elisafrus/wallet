{
  "$schema": "https://schema.stryker-mutator.io/config/mutation-testing-config.schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "jest": {
    "projectType": "custom",
    "configFile": "backend/jest.config.js",
    "enableFindRelatedTests": true
  },
  "mutate": [
    "backend/service/*.js",
    "!backend/service/*.test.js"
  ],
  "thresholds": { "high": 80, "low": 60, "break": 0 }
}